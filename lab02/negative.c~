#include<stdio.h>
#include<stdlib.h>
// Negative numbe checker
// Jackie Cai 24 Septemeber 2019 z5259449
int main(void){
    int number;
 
    scanf ("%d",&number);
    // Entering Number
    if (number == 0) {
    printf("You have entered zero.\n");
    // Since its easier to start at zero since only positive or negative
} else if (number > 0) {
    printf("You have entered a positive number.\n");
} else {
    printf ("Don't be so negative!\n");
    // The only option left for intergers would only be negative
}
    return 0;
}

